<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yesterday"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/incoming_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hai Rizal, I’m on the way to your home, Please
wait a moment. Thanks!"
        android:background="@drawable/bg_incoming_text"
        android:gravity="center_vertical"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintBottom_toTopOf="@+id/incoming_time" />
    <TextView
        android:id="@+id/incoming_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:26 Am"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/incoming_text"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/outgoing_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank You! I’ll be waiting for that"
        android:background="@drawable/bg_outgoing_text"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incoming_time" />
    <TextView
        android:id="@+id/outgoing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:text="5:56 Am"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outgoing_text" />

</androidx.constraintlayout.widget.ConstraintLayout>